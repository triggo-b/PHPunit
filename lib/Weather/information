<?php

namespace Weather;

interface IClient
{
    /**
     * @param \Buzz\Browser $httpClient
     */
    public function __construct($httpClient);

    /**
     * @param string $cityName
     * @return \Weather\IResponse;
     */
    public function getWeatherInfoByCity($cityName);
}

interface IResponse
{
    /**
     * @param string $weatherInfo
     */
    public function __construct($weatherInfo);

    /**
     * @return float
     */
    public function getTemperature();

    /**
     * @return float
     */
    public function getPressure();

    /**
     * @return float
     */
    public function getWindSpeed();
}



/* How to use it: */


$client = new \Weather\Client(new \Buzz\Browser());
$moscowWeather = $client->getWeatherInfoByCity('Moscow');
$voronezhWeather = $client->getWeatherInfoByCity('Voronezh');

$voronezhWeather->getPressure();
$moscowWeather->getTemperature();